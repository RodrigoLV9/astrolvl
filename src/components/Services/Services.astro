---
<section class="services" id="services">
    <h1>Servicios</h1>
    <div class="services__cards">
        {
            dataServices.map((service)=>(
                <Card title={service.title} description={service.description} price={service.priceRange} features={service.features} />
            ))
        }
    </div>
    <div class="circle"></div>
    <div class="circle2"></div>
    <div class="circle3"></div>
</section>
<style>
    .services{
        padding:100px 0;
        position:relative;
        overflow-x:hidden
    }
    .services>h1{
        text-align:center;
        font-size:3rem;
        margin-bottom:70px;
        background:linear-gradient(to left, var(--color-main2), var(--color-main1));
        -webkit-text-fill-color: transparent;
        -webkit-background-clip: text;
    }
    .services__cards{
        display:flex;
        align-items:center;
        justify-content:center;
        flex-wrap:wrap;
        gap:20px;
    }
    .circle, .circle2, .circle3{
        width:300px;
        height:300px;
        border-radius:150px;
        position:absolute;
        z-index:-1;
        filter:blur(100px);
        opacity: .8;
    }
    .circle{
        background-color:rgb(32, 27, 65);
        top:0;
        left:0
    }
    .circle2{
        background-color:rgb(35, 55, 71);
        top:400px;
        right:-100px
    }
    .circle3{
        background-color:rgba(29, 158, 94, 0.404);
        bottom:100px;
        left:-120px
    }
    @media screen and (max-width: 920px){
        
    }
    @media screen and (max-width: 768px){
        .services>h1{
            font-size:2.1rem;
        }
        .services__cards{
            gap:15px;
        }
    }
    @media screen and (max-width:480px){
            
    }
</style>