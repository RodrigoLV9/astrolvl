---
import {ContactLeft} from './ContactLeft.jsx'
import ContactRight from "./ContactRight.astro"
---
<section class="contact" id="contact">
    <h2>Contacto</h2>
    <div class="contact__side">
        <ContactLeft client:load/>
        <ContactRight></ContactRight>
    </div>
</section>
<style>
    .contact{
        margin:80px auto;
        width:900px;
    }
    .contact>h2{
        text-align: center;
        font-size:3rem;
        margin:70px 0;
        background:linear-gradient(to left, var(--color-main2), var(--color-main1));
        -webkit-text-fill-color: transparent;
        -webkit-background-clip: text;
    }
    .contact__side{
        display:flex;
        align-items: start;
        justify-content: space-between;
    }
    @media screen and (max-width: 1100px){
        .contact__side{
            flex-direction:column;
            width:min-content;
            align-items:center;
            margin:auto;
            gap:70px
        }
    }
    @media screen and (max-width: 768px){
        .contact{
            width:min-content
        }
        .contact>h2{
            font-size:2.1rem;
        }
    }
    @media screen and (max-width:480px){ 
    }
</style>