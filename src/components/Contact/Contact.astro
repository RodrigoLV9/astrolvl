---
import ContactLeft from "./ContactLeft.astro"
import ContactRight from "./ContactRight.astro"
---
<section class="contact" id="contact">
    <h2>Contacto</h2>
    <div class="contact__side">
        <ContactLeft></ContactLeft>
        <ContactRight></ContactRight>
    </div>
</section>
<style>
    .contact{
        margin:80px auto;
        width:1000px;
    }
    .contact>h2{
        text-align: center;
        font-size:3rem;
        margin:70px 0
    }
    .contact__side{
        display:flex;
        align-items: start;
        justify-content: space-between;
    }
</style>