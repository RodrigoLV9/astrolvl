---
import {ContactLeft} from './ContactLeft.jsx'
import ContactRight from "./ContactRight.astro"
---
<section class="contact" id="contact">
    <h2>Contacto</h2>
    <div class="contact__side">
        <ContactLeft client:load/>
        <ContactRight></ContactRight>
    </div>
</section>
<style>
    .contact{
        margin:80px auto;
        width:1000px;
    }
    .contact>h2{
        text-align: center;
        font-size:3rem;
        margin:70px 0;
        background:linear-gradient(to left, rgb(150, 1, 150), rgb(0, 114, 207));
        -webkit-text-fill-color: transparent;
        -webkit-background-clip: text;
    }
    .contact__side{
        display:flex;
        align-items: start;
        justify-content: space-between;
    }
</style>