---
import Header from "./Header.astro"
import Hero from "./Hero.astro"
---
<section class='heroContainer'>
    <Header/>
    <Hero/>
    <div class="hero__carousel">
        <p>Rendimiento</p>
        <p>UX/UI</p>
        <p>Responsive Design</p>
    </div>
</section>
<style>
    .heroContainer{
        width:100%;
        height:100vh;
        display:flex;
        flex-direction:column;
        justify-content: space-between;
    }
    .hero__carousel{
        width:100%;
        height:80px;
        background-color:rgb(64, 2, 105);
        display:flex;
        align-items:center;
        justify-content:space-around;
        color:whitesmoke;
        font-size:1.2rem;
        position:relative;
    }
</style>
